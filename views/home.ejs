    <body>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<section class="container">
        <h1 align="left">Task Manager</h1>

    
        <form action="/task-lists/create-task" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th >Add Task</th>
                    <th >type of task</th>
                    <th >starting date</th>
                    <th >due date</th>
                    <th ></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="What task do you want to add?" required></input></th>
                      <td >  <select name="typeOfTask" required>

                        <option>Regular Task</option>
                        <option>Urgent Task</option>
                        <option>Short Task</option>
                        <option>Long Task</option>
                        <option>Other</option>

                    </select></th>
                      <td > <input type="date" name="startingDate" required></th>
                        <td > <input type="date" name="dueDate" required></th>
                      <td ><input type="submit"  class="btn btn-dark"id="add" value="ADD TASK"></th>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div>          
                <h1 align="left">Tasks</h1>

                <form action="/task-lists/delete-task" method="GET">
                    <table class="table">
                        <thead>
                            <tr>
                              <th>Select</th>
                              <th>Task</th>
                              <th>Type of task</th>
                              <th>starting date</th>
                            <th>due date</th>
                            </tr>
                          </thead>
                        <% for(let i of task) { %>
                            
<tr>
                               <td> <input type="checkbox" name="<%= i._id %>" ></td>
                               <td> <p id="task-description"><%= i.description %></td>
                                <td><p id="task-typeOfTask"></p>: <%= i.typeOfTask %></td>
                                <td><p id="starting-date">: <%= i.startingDate %></p></td>
                                <td><p id="due-date">: <%= i.dueDate %></p></td>
</tr>
                    
                        <% } %>
                            
                

                           
</table>
<div  align = "left"><input type="submit" class="btn btn-dark" value="DELETE TASK">
                </div>></form>

        
            </div>
    </body>
    
